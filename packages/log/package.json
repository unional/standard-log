{
  "name": "standard-log",
  "version": "9.0.0",
  "description": "The standard log library",
  "homepage": "https://github.com/unional/standard-log/tree/master/packages/log",
  "bugs": {
    "url": "https://github.com/unional/standard-log/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/unional/standard-log.git"
  },
  "license": "MIT",
  "author": {
    "name": "Homa Wong",
    "email": "homawong@gmail.com"
  },
  "sideEffects": false,
  "type": "module",
  "exports": {
    "import": "./esm/index.js",
    "require": "./cjs/index.js"
  },
  "main": "./cjs/index.js",
  "browser": {
    "./cjs/platform.js": "./cjs/platform.browser.js",
    "./esm/platform.js": "./esm/platform.browser.js",
    "./ts/platform.js": "./ts/platform.browser.js"
  },
  "typings": "./cjs/index.d.ts",
  "files": [
    "cjs",
    "dist",
    "esm",
    "ts",
    "!ts/**/*.spec.ts",
    "!ts/testUtil.ts"
  ],
  "scripts": {
    "build": "npm-run-all build:clean -p build:cjs build:esm build:tslib bundle:es5 bundle:esm",
    "build:clean": "rimraf .tsbuildinfo || true",
    "build:cjs": "tsc -p ./tsconfig.cjs.json",
    "build:esm": "tsc -p ./tsconfig.esm.json",
    "build:tslib": "tsc -p ./tsconfig.tslib.json",
    "bundle": "run-p bundle:es5 bundle:esm",
    "bundle:es5": "webpack -c ./webpack.es5.cjs",
    "bundle:esm": "webpack -c ./webpack.esm.cjs",
    "clean": "rimraf cjs coverage dist esm lib libm tslib .tsbuildinfo && mkdir cjs && echo '{\"type\":\"commonjs\"}' > cjs/package.json || true",
    "coverage": "jest --coverage",
    "depcheck": "depcheck",
    "lint": "cross-env TIMING=1 eslint --ext=ts,js,cjs,mjs .",
    "size": "size-limit",
    "test": "jest",
    "verify": "npm-run-all clean -p build depcheck lint coverage -s size",
    "watch": "jest --watch"
  },
  "dependencies": {
    "@just-func/types": "^0.2.0",
    "iso-error": "^4.3.5",
    "ms": "^2.1.3",
    "type-plus": "^4.10.0",
    "upper-case": "^2.0.2"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^7.0.8",
    "@types/ms": "^0.7.31",
    "@types/ramda": "^0.28.13",
    "assertron": "^9.2.3",
    "compression-webpack-plugin": "^10.0.0",
    "cross-env": "^7.0.3",
    "depcheck": "^1.4.3",
    "eslint": "^8.17.0",
    "jest": "^28.1.0",
    "npm-run-all": "^4.1.5",
    "param-case": "^3.0.4",
    "pascal-case": "^3.1.2",
    "ramda": "^0.28.0",
    "rimraf": "^3.0.2",
    "size-limit": "^7.0.8",
    "ts-jest": "^28.0.4",
    "ts-loader": "^9.3.0",
    "tslib": "^2.4.0",
    "typescript": "^4.7.3",
    "webpack": "^5.73.0",
    "webpack-bundle-analyzer": "^4.5.0",
    "webpack-cli": "^4.9.2"
  },
  "size-limit": [
    {
      "path": "./cjs/index.js",
      "limit": "20 kB"
    },
    {
      "path": "./esm/index.js",
      "limit": "10 kB"
    },
    {
      "path": "./tslib/index.js",
      "limit": "20 kB"
    }
  ]
}
