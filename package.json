{
  "name": "standard-log",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "tsc -b",
    "build-storybook": "build-storybook",
    "build:watch": "tsc -b -w",
    "bundle": "lerna run bundle",
    "clean": "lerna run clean && rimraf .tsbuildinfo",
    "codacy": "cat coverage/lcov.info | codacy-coverage",
    "coverage": "jest --coverage",
    "depcheck": "lerna run depcheck",
    "lint": "eslint --ext=js,ts .",
    "nuke": "yarn clean && lerna clean -y && rimraf node_modules",
    "publish:ci": "lerna publish from-package -y --no-verify-access",
    "storybook": "start-storybook -p 6006",
    "test": "jest",
    "test:watch": "jest --watch",
    "verify": "yarn lint && yarn build && yarn depcheck && yarn coverage && yarn bundle",
    "watch": "yarn test:watch"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.7.7",
    "@changesets/cli": "^2.4.1",
    "@commitlint/cli": "^8.3.4",
    "@commitlint/config-conventional": "^8.3.4",
    "@storybook/addon-actions": "^5.2.8",
    "@storybook/addon-links": "^5.2.8",
    "@storybook/react": "^5.2.8",
    "@types/jest": "^24.0.25",
    "@types/ms": "^0.7.31",
    "@types/ramda": "^0.26.39",
    "@types/react": "^16.9.17",
    "@types/semver": "^6.2.0",
    "@unional/devpkg-node": "^1.4.2",
    "assertron": "^7.1.2",
    "babel-loader": "^8.0.6",
    "codacy-coverage": "^3.4.0",
    "codecov": "^3.6.1",
    "commitlint-circle": "^1.0.0",
    "compression-webpack-plugin": "^3.0.1",
    "console-feed": "^2.8.11",
    "delay": "^4.3.0",
    "husky": "^4.0.1",
    "lerna": "^3.20.2",
    "param-case": "^3.0.3",
    "pascal-case": "^3.1.1",
    "prop-types": "^15.7.2",
    "ramda": "^0.27.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "rimraf": "^3.0.0",
    "satisfier": "^5.1.0",
    "source-map-loader": "^0.2.4",
    "ts-loader": "^6.2.1",
    "typescript": "^3.7.4",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10"
  }
}
