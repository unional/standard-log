{
  "name": "standard-log",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "tsc -b",
    "build-storybook": "build-storybook",
    "build:watch": "tsc -b -w",
    "bundle": "lerna run bundle",
    "clean": "lerna run clean && rimraf .tsbuildinfo",
    "codacy": "cat coverage/lcov.info | codacy-coverage",
    "coverage": "jest --coverage",
    "depcheck": "lerna run depcheck",
    "lint": "eslint --ext=js,ts .",
    "nuke": "yarn clean && lerna clean -y && rimraf node_modules",
    "publish:ci": "lerna publish from-package -y --no-verify-access",
    "release": "lerna publish",
    "storybook": "start-storybook -p 6006",
    "test": "jest",
    "test:nodejs": "jest",
    "test:watch": "jest --watch",
    "verify": "yarn lint && yarn build && yarn depcheck && yarn coverage && yarn bundle",
    "watch": "yarn test:watch"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.8.6",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.8.3",
    "@babel/plugin-proposal-optional-chaining": "^7.8.3",
    "@babel/preset-env": "^7.8.6",
    "@babel/preset-typescript": "^7.8.3",
    "@changesets/cli": "^2.5.2",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@storybook/addon-actions": "^5.3.14",
    "@storybook/addon-links": "^5.3.14",
    "@storybook/react": "^5.3.14",
    "@types/jest": "^25.1.3",
    "@types/ms": "^0.7.31",
    "@types/ramda": "^0.26.43",
    "@types/react": "^16.9.23",
    "@types/semver": "^7.1.0",
    "@unional/devpkg-node": "^1.5.0",
    "assertron": "^7.1.2",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.0.6",
    "codacy-coverage": "^3.4.0",
    "codecov": "^3.6.5",
    "commitlint-circle": "^1.0.0",
    "compression-webpack-plugin": "^3.1.0",
    "console-feed": "^2.8.11",
    "delay": "^4.3.0",
    "husky": "^4.2.3",
    "jest": "^24.9.0",
    "jest-watch-repeat": "^2.0.0",
    "jest-watch-suspend": "^1.1.2",
    "jest-watch-toggle-config": "^1.0.2",
    "jest-watch-typeahead": "^0.4.2",
    "lerna": "^3.20.2",
    "param-case": "^3.0.3",
    "pascal-case": "^3.1.1",
    "prop-types": "^15.7.2",
    "ramda": "^0.27.0",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "rimraf": "^3.0.2",
    "satisfier": "^5.1.0",
    "source-map-loader": "^0.2.4",
    "ts-jest": "^24.3.0",
    "ts-loader": "^6.2.1",
    "typescript": "^3.8.3",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "webpack": "^4.41.6",
    "webpack-cli": "^3.3.11"
  }
}
