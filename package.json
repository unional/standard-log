{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:doc": "typedoc && copyfiles -f packages/log/images/* docs/images",
    "clean": "turbo run clean",
    "color": "pnpm --filter=standard-log-color",
    "coverage": "turbo run coverage",
    "cs": "changeset",
    "depcheck": "turbo run depcheck",
    "dev": "turbo run dev --parallel",
    "example": "pnpm --filter=@standard-log/example",
    "postinstall": "husky install",
    "just-func": "pnpm --filter=just-func",
    "lint": "turbo run lint",
    "log": "pnpm --filter=standard-log",
    "nuke": "turbo run nuke && pnpm nuke:local",
    "nuke:local": "rimraf node_modules",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "prepare": "husky install",
    "release": "changeset publish",
    "size": "turbo run size",
    "syslog": "pnpm --filter=standard-log-syslog",
    "test": "turbo run test",
    "verify": "turbo run lint build coverage depcheck size",
    "version": "changeset version",
    "watch": "jest --watch"
  },
  "devDependencies": {
    "@changesets/cli": "^2.25.0",
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "copyfiles": "^2.4.1",
    "husky": "^8.0.1",
    "pinst": "^3.0.0",
    "turbo": "^1.5.5",
    "typedoc": "^0.23.15",
    "typedoc-plugin-extras": "^2.3.0",
    "typescript": "^4.8.4"
  },
  "packageManager": "pnpm@7.14.2"
}
