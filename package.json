{
  "name": "standard-log",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "tsc -b",
    "build-storybook": "build-storybook",
    "build:watch": "tsc -b -w",
    "bundle": "lerna run bundle",
    "clean": "lerna run clean && rimraf .tsbuildinfo",
    "codacy": "cat coverage/lcov.info | codacy-coverage",
    "coverage": "jest --coverage",
    "depcheck": "lerna run depcheck",
    "lint": "eslint --ext=js,ts .",
    "nuke": "yarn clean && lerna clean -y && rimraf node_modules",
    "storybook": "start-storybook -p 6006",
    "test": "jest",
    "test:nodejs": "jest",
    "test:watch": "jest --watch",
    "verify": "yarn lint && yarn build && yarn depcheck && yarn coverage && yarn bundle",
    "watch": "yarn test:watch"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.16.7",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.16.7",
    "@babel/plugin-proposal-optional-chaining": "^7.16.7",
    "@babel/preset-env": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@changesets/cli": "^2.19.0",
    "@commitlint/cli": "^16.0.1",
    "@commitlint/config-conventional": "^16.0.0",
    "@storybook/addon-actions": "^6.4.9",
    "@storybook/addon-links": "^6.4.9",
    "@storybook/react": "^6.4.9",
    "@types/jest": "^27.4.0",
    "@types/ms": "^0.7.31",
    "@types/ramda": "^0.27.62",
    "@types/react": "^17.0.38",
    "@types/semver": "^7.3.9",
    "assertron": "^9.0.0",
    "babel-jest": "^27.4.5",
    "babel-loader": "^8.2.3",
    "codacy-coverage": "^3.4.0",
    "codecov": "^3.8.3",
    "commitlint-circle": "^1.0.0",
    "compression-webpack-plugin": "^9.2.0",
    "console-feed": "^3.1.10",
    "delay": "^5.0.0",
    "dependency-check": "^4.1.0",
    "eslint": "^8.6.0",
    "eslint-plugin-harmony": "^6.0.0",
    "husky": "^7.0.4",
    "jest": "^27.4.5",
    "jest-audio-reporter": "^2.2.1",
    "jest-progress-tracker": "^3.0.1",
    "jest-watch-repeat": "^2.0.0",
    "jest-watch-suspend": "^1.1.2",
    "jest-watch-toggle-config": "^2.0.1",
    "jest-watch-typeahead": "^1.0.0",
    "lerna": "^4.0.0",
    "npm-check-updates": "^12.0.5",
    "param-case": "^3.0.3",
    "pascal-case": "^3.1.1",
    "ramda": "^0.27.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rimraf": "^3.0.2",
    "satisfier": "^5.1.1",
    "source-map-loader": "^3.0.0",
    "ts-loader": "^9.2.6",
    "typescript": "^4.5.4",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1"
  }
}
